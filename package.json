{
    "name": "tdm",
    "version": "1.0.1",
    "description": "A display manager for EPICS",
    "main": "./dist/mainProcess/startMainProcess.js",
    "repository": "https://github.com/MyApp/my-app",
    "homepage": "https://github.com/MyApp/my-app",
    "author": {
        "name": "Hao Hao",
        "email": "haoh@ornl.gov"
    },
    "scripts": {
        "start": "ROOT=`pwd`; ./scripts/npm_start.sh $ROOT; electron .",
        "web": "ROOT=`pwd`; ./scripts/npm_start.sh $ROOT; electron . main-process-mode web",
        "build-all": "ROOT=`pwd`; ./scripts/npm_start.sh $ROOT; electron-builder -mwl",
        "build-mac": "ROOT=`pwd`; ./scripts/npm_start.sh $ROOT; electron-builder --mac",
        "build-linux": "ROOT=`pwd`; ./scripts/npm_start.sh $ROOT; electron-builder --linux",
        "build-windows": "ROOT=`pwd`; ./scripts/npm_start.sh $ROOT; electron-builder --windows",
        "build-jsdoc": "./node_modules/.bin/jsdoc -r -d ./doc/JSDoc/ ./dist/",
        "dev": "webpack serve --mode development",
        "build": "webpack --mode production"
    },
    "license": "MIT",
    "devDependencies": {
        "@electron/rebuild": "^3.3.0",
        "@types/express": "^4.17.21",
        "@types/katex": "^0.16.3",
        "@types/node": "^20.0.0",
        "@types/node-fetch": "^2.6.2",
        "@types/oracledb": "^6.5.1",
        "@types/pidusage": "^2.0.5",
        "@types/react": "^18.0.12",
        "@types/react-dom": "^18.0.5",
        "@types/react-router-dom": "^5.3.3",
        "@types/react-router-hash-link": "^2.4.9",
        "@types/ssh2": "^1.11.18",
        "@types/styled-components": "^5.1.25",
        "@types/uuid": "^9.0.0",
        "@types/ws": "^8.5.8",
        "electron": "^31.0.0",
        "electron-builder": "^24.0.0",
        "jsdoc": "^4.0.2",
        "webpack": "^5.93.0",
        "webpack-cli": "^5.1.4",
        "webpack-dev-server": "^5.0.4"
    },
    "dependencies": {
        "@types/html2canvas": "^1.0.0",
        "@xterm/addon-fit": "^0.10.0",
        "@xterm/addon-web-links": "^0.11.0",
        "@xterm/xterm": "^5.5.0",
        "body-parser": "^1.20.2",
        "epics-tca": "1.1.3",
        "express": "^4.18.2",
        "html2canvas": "^1.4.1",
        "katex": "^0.16.8",
        "mathjs": "^11.9.1",
        "oracledb": "^6.5.1",
        "path": "^0.12.7",
        "path-browserify": "^1.0.1",
        "pidusage": "^3.0.2",
        "react": "^18.3.0",
        "react-dom": "^18.3.0",
        "react-router-dom": "^6.24.0",
        "react-router-hash-link": "^2.4.3",
        "ssh2": "^1.15.0",
        "ts-loader": "^9.5.0",
        "uuid": "^9.0.0",
        "ws": "^8.14.2"
    },
    "build": {
        "appId": "gov.ornl.tdm",
        "productName": "TDM",
        "copyright": "",
        "asar": true,
        "asarUnpack": [
            "dist/mainProcess/wsPv/WsPvClient.js",
            "dist/mainProcess/wsPv/WsPvClient.py"
        ],
        "mac": {
            "target": {
                "target": "dir",
                "arch": [
                    "x64",
                    "arm64"
                ]
            },
            "fileAssociations": [
                {
                    "ext": [
                        "tdl"
                    ],
                    "name": "TDM file"
                }
            ]
        },
        "win": {
            "target": [
                {
                    "target": "portable",
                    "arch": [
                        "x64",
                        "arm64"
                    ]
                }
            ],
            "fileAssociations": [
                {
                    "ext": [
                        "tdl"
                    ],
                    "name": "TDM file"
                }
            ]
        },
        "linux": {
            "target": {
                "target": "dir",
                "arch": [
                    "x64",
                    "arm64"
                ]
            },
            "fileAssociations": [
                {
                    "ext": [
                        "tdl"
                    ],
                    "name": "TDM file"
                }
            ]
        },
        "files": [
            "dist/**/*",
            "package.json"
        ],
        "directories": {
            "output": "out",
            "app": ".",
            "buildResources": "dist/mainProcess/resources/webpages"
        },
        "extends": null
    }
}
